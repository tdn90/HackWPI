<h1 style="font-variant: small-caps; font-weight:bold">Heze Receipts</h1>

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <br />
  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, autofocus: true, class: 'form-control top', placeholder: 'Email Address' %>

  <%= f.label :password, class: "sr-only", placeholer: 'Email address' %>
  <%= f.password_field :password, autocomplete: "off", class: 'form-control bottom', placeholder: 'Password' %>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <br />
  <div class="actions">
    <%= f.submit "Log in", class: 'form-control btn-primary top bottom' %>
  </div>
  <br />
<% end %>

